<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="reward"
            type="com.jery.starrailhelper.data.RewardItem" />
    </data>

    <!-- Your layout structure for displaying reward items -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rewardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:background="@color/colorAccent"
            tools:src="@drawable/ic_item_stellar_jade"/>

        <TextView
            android:id="@+id/rewardQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/zh_cn_modify"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            tools:text="x50"/>

        <!-- Add more views for other reward details if needed -->

    </LinearLayout>
</layout>
